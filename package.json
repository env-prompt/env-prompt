{
  "name": "env-prompt",
  "version": "2.0.2",
  "description": "A dependency-free utility that prompts you for your project's environment variables.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "ts-node bin/build.ts --watch",
    "build": "ts-node bin/build.ts --build",
    "build:dist": "ts-node bin/build.ts --build --env=production",
    "test:automated": "npx jest --config=jest.automated.config.js",
    "test:unit": "npx jest --config=jest.unit.config.js",
    "release": "ts-node bin/release.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/env-prompt/env-prompt.git"
  },
  "keywords": [
    ".env",
    "env",
    "parameters",
    "environment",
    "variables",
    "configuration",
    "config",
    "interactive",
    "install"
  ],
  "readmeFilename": "README.md",
  "bin": {
    "env-prompt": "./dist/cli.js"
  },
  "author": "Brian Kotos <brian.kotos@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^14.11.2",
    "chokidar": "^3.5.2",
    "esbuild": "^0.12.21",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.3.5"
  }
}
