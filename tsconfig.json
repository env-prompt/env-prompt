{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "src",
    "lib": ["es2019"],
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "node_modules",
    "test",
    "old-src"
  ]
}
