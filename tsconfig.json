{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es2015" ],
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "old-src"
  ]
}